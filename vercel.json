{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "buildCommand": "sudo apt-get update && sudo apt-get install -y tesseract-ocr libleptonica-dev",
  "env": {
    "TESSDATA_PREFIX": "/usr/share/tesseract-ocr/4.00/tessdata"
  }
}